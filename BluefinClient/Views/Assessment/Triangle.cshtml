<form novalidate id="triangleForm" name="triangleForm">
    <h1>Reverse Words</h1>
    <table>
        <tr>
            <td>
                Side A
            </td>
            <td>
                <input type="text" id="sideA" name="sideA" ng-model="model.sideA" required />
                <span class="has-error"
                      ng-show="triangleForm.sideA.$invalid && triangleForm.sideA.$dirty">
                    Input is required
                </span>
            </td>
        </tr>
        <tr>
            <td>
                Side B
            </td>
            <td>
                <input type="text" id="sideB" name="sideB" ng-model="model.sideB" required />
                <span class="has-error"
                      ng-show="triangleForm.sideB.$invalid && triangleForm.sideB.$dirty">
                    Input is required
                </span>
            </td>
        </tr>
        <tr>
            <td>
                Side C
            </td>
            <td>
                <input type="text" id="sideC" name="sideC" ng-model="model.sideC" required />
                <span class="has-error"
                      ng-show="triangleForm.sideC.$invalid && triangleForm.sideC.$dirty">
                    Input is required
                </span>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <h3>{{model.result}}</h3>
            </td>
        </tr>
    </table>
    <div>
        <button type="button" ng-click="submit(triangleForm)" ng-disabled="model.isBusy">Submit</button>
        <button type="button" ng-click="back()" ng-disabled="model.isBusy">Back</button>
        {{model.message}}
    </div>
</form>